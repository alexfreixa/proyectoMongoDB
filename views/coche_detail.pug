extends layout

block content

  h1 Coche: #{coche.modelo}
  if coche.fecha_de_fabricacion==NULL
     p No hay registro de la fecha de fabricación
  else
    p #[Strong Fecha de fabricación: ] #{coche.fecha_de_fabricacion_formatted}
    p #[strong Concesionario: ]
      for concesionario in todos_concesionarios
        if concesionario.id == coche.marca
          a(href=concesionario.url) #{concesionario.nombre}
          p #[strong Marca:] #{concesionario.marca_concesionario}
        else
    p #[Strong Color:] #{coche.color}
    p #[Strong Precio:] #{coche.precio_venta}
    //- p #[Strong Cliente:]
      //- a(href=coche.cliente.url) #{coche.cliente}

  div(style='margin-left:20px;margin-top:20px')

  p
    a(href=coche.url+'/delete') Delete Coche
  p
    a(href=coche.url+'/update') Update Coche
